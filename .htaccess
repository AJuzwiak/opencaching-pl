RewriteEngine on

RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
RewriteRule ^(.*)$ http://%1/$1 [NE,R=301,L]

RewriteBase /

RewriteRule ^search\.(gpx|kml|loc|ov2|ovl|txt|wpt|uam|xml|zip)$ search.php?%{QUERY_STRING} [NC]
RewriteRule ^ocpl(\d+)\.(gpx|kml|loc|ov2|ovl|txt|wpt|uam|xml|zip)$ search.php?queryid=$1&output=$2&%{QUERY_STRING} [NC]
RewriteRule ^ocplgc(\d+)\.(gpx)$ search.php?queryid=$1&output=gpxgc&%{QUERY_STRING} [NC]

Alias images/uploads /var/www/ocpl-data/images/uploads/
Alias uploads /var/www/ocpl-data/images/uploads/
Alias upload /var/www/ocpl-data/images/uploads/
Alias wigo /var/www/ocpl-data/wigo

FileETag None
